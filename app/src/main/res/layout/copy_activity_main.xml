<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/pbProcess"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离放假还有 "/>
            <TextView
                android:id="@+id/tvTotalNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 天"/>
            <TextView
                android:id="@+id/tvWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这学期已经过了 " />
        <TextView
            android:id="@+id/tvThroughNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" %" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <LinearLayout
            android:id="@+id/llStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="invisible">
            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开学日期："/>
            <TextView
                android:id="@+id/etStartY"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:maxLength="4"
                android:gravity="center"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"/>
            <TextView
                android:id="@+id/etStartM"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:maxLength="2"
                android:gravity="center"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"/>
            <TextView
                android:id="@+id/etStartD"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:maxLength="2"
                android:gravity="center"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"/>
            <Button
                android:id="@+id/btUpdateStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改"
                android:elevation="0dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="invisible">
            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放假日期："/>
            <TextView
                android:id="@+id/etEndY"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:maxLength="4"
                android:gravity="center"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"/>
            <TextView
                android:id="@+id/etEndM"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:maxLength="2"
                android:gravity="center"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"/>
            <TextView
                android:id="@+id/etEndD"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:maxLength="2"
                android:gravity="center"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"/>
            <Button
                android:id="@+id/btUpdateEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改"/>
        </LinearLayout>
        <Button
            android:id="@+id/btSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
